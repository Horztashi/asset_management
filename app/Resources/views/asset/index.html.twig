{% extends 'base.html.twig' %}

{% block body %}
    <div id = "datalist" class = "datalist">
        <div class = "container title">
            <div class = "row">
                <div class = "col-md-4"><h4>
                    {% if item_type is defined %}
                        List of Assets | {{ item_type }} | {{ item_name }}
                    {% else %}
                        List of Assets
                    {% endif %}
                </h4></div>
                <div class = "col-md-5 "><input class = "search form-control" placeholder = "Search"></div>
                <div class = "col-md-3 "><a class = "btn btn-success btn-block" href="{{ path('asset_new') }}">
                        <i class = "fa fa-plus"></i>Add</a>
                </div>
            </div>
            <div class = "row pull-right">
                <div class = "col-md-12 pull-right">
                    <div class = "btn-group">
                        <div class ="btn btn-default btn-label" data-sort ="name">Sort By</div>
                        <div class ="btn btn-primary sort" data-sort ="name">Code</div>
                        <div class ="btn btn-primary sort" data-sort ="employee">Employee</div>
                        <div class ="btn btn-primary sort" data-sort ="status">Status</div>
                    </div>
                </div>
            </div>
        </div>

        <div class = "container list">
            {% if assets is not empty %}
                {% for asset in assets %}
                        <div class = "row {% if asset.status.id in [2,3,4,5] %}bg-danger{% endif %}">
                            <div class = "col-md-5 name"><a href = "{{path('asset_show',{'id':asset.id})}}">{{ asset.code }}</a></div>
                            <div class = "col-md-4 employee">
                                {% if asset.user %}
                                    {{asset.user.fullname}}
                                {% else %}
                                    <span class = "text-muted">NOT ASSIGNED</span>
                                {% endif %}
                        </div>
                            <div class = "col-md-3 status">{{ asset.status.name }}</div>
                        </div>
                {% endfor %}
            {% else %}
                <div class = "row">
                    <div class = "col-md-12">
                        <h2 class = "text-muted text-center"><i class = "fa fa-frown-o"></i>Nothing to see here</h2>
                    </div>
                </div>
            {% endif %}
        </div>

        <div class = "container">
            <div class = "row text-center">
                    <ul class="pagination"></ul>
            </div>
        </div>
    </div>
{% endblock %}
