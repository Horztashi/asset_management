{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/datatables.min.css') }}" />
{% endblock %}

{% block body %}
        <div class = "container border mb-4">
        <div class='row mt-1 mb-1'>
            <div class="col-auto"><h3>users</h3></div>
            <div class="ml-auto col-2">
                <a href="{{path('user_new')}}" class="btn btn-success btn-block">
                    <i class="fa fa-plus"></i>&nbsp;Add Employee
                </a>        
            </div>
        </div>
        <div class='row'><div class='col-12'>
            <table class='table table-sm'>
                <thead class='thead-dark'>
                    <th>Employee</th>
                    <th>Status</th>
                    <th>Email</th>
                    <th>Asset Count</th>
                </thead>
                <tbody>
                    {% if users is not empty %}
                        {% for user in users %}
                        <tr>
                            <td>
                                (<a href = "{{path('user_show',{'id':user.id})}}">
                                    {{ user.employeenumber }}
                                </a>) {{ user.fullname }}
                            </td>
                            <td>{% if user.enabled %}ACTIVE{% else %}INACTIVE{% endif %}</td>
                            <td>{{user.email}}</td>
                            <td>{{user.assets.count}}</td>
                        </tr>
                        {% endfor %}
                    {% else %}
                        <tr><td><h2 class = "text-muted text-center"><i class = "fa fa-frown-o"></i>Nothing to see here</h2></td></tr>
                    {% endif %}
                </tbody>
            </table>
        </div></div>
    </div>
{% endblock %}

{% block javascripts %}
        <script src="{{ asset('js/datatables.min.js') }}"></script>
        <script type="text/javascript">
            $(function(){
                $('.table').DataTable();
            });
        </script>
{% endblock %}